alias g='git'
alias ag='rg'
alias j='z'
alias logout='sudo pkill -u tippenein'
alias apti='sudo apt install'
alias aptrm='sudo apt purge'
alias aptup='sudo apt update'
alias sex='stack exec'
alias sb='stack build --fast'
alias st='stack test --fast'
alias sbw='stack build --fast --file-watch'
alias stw='stack test --fast --file-watch'
alias sshirc='ssh tippenein@deltadrome.us -t tmux attach-session -t irc'
alias sshdelta='ssh tippenein@deltadrome.us'
alias tls='tmux list-sessions'
alias ta='tmux attach -t '
alias tkill='tmux kill-session -t '
alias nb='nix-build'
alias ne='nix-env'
alias nu='nix-channel --update nixpkgs'
alias ls='ls --color=auto'
alias l="ls  --color=auto -la"
alias grep='grep -i --color=auto'
alias mv='mv --interactive --verbose'
alias empty-trash='gvfs-trash --empty'
alias cp='cp --verbose'
alias pbcopy='xsel --clipboard --input'
alias pbpaste='xsel --clipboard --output'
alias restart='sudo shutdown -r now'
alias shutit='sudo shutdown now'
alias e='emacs -nw'
# both require restarts/log outs
alias nosleep='sudo systemctl mask sleep.target suspend.target hibernate.target hybrid-sleep.target'
alias allowsleep='sudo systemctl unmask sleep.target suspend.target hibernate.target hybrid-sleep.target'
alias nightlighton='gsettings set org.gnome.settings-daemon.plugins.color night-light-enabled true'
alias nightlightoff='gsettings set org.gnome.settings-daemon.plugins.color night-light-enabled false'
